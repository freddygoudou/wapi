<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AudioVideoChoixFormation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:textColor="@color/colorGray"
            android:text="Merci d’avoir choisi d’apprendre à devenir un très bon producteur ou une très bonne productrice."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textSize="22sp"
            android:textColor="@color/colorGray"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:text="Si tu souhaites te former, appuie sur là où tu vois des gens dans une classe avec leur maître."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textSize="22sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorGray"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="Si tu souhaites apprendre à travers des vidéos, appuie sur là où tu vois une télévision."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_formatio_audio"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/k1"/>
        <ImageView
            android:id="@+id/iv_formatio_video"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/k2"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>