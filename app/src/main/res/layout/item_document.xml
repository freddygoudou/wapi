<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/colorWhite"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    android:backgroundTint="@color/colorWhite"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_marginHorizontal="1dp">

    <LinearLayout
        android:id="@+id/ll_one_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_produit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mung_bean"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="BAOBAB"
                    android:textStyle="bold"
                    android:paddingEnd="30dp"
                    android:layout_marginTop="11dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/colorBlue"/>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"
                    android:text="Bonne pratique de transformation artisanale des feuilles de baobab"
                    android:textColor="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_download_completed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""/>
                    <Button
                        android:id="@+id/btn_download_carrousel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorBlue"
                        android:textSize="7pt"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:text="@string/download"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
